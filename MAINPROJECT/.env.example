# PingTower example environment
# Copy to .env and adjust values

# App
APP_PORT=8000

# Database (Postgres recommended for compose)
DB_URL=postgresql+psycopg://user:password@postgres:5432/fastapi_db

# Notifier (optional)
TELEGRAM_BOT_TOKEN=
TELEGRAM_CHAT_ID=

# Scheduler limits
CHECK_TICK_SEC=10
GLOBAL_CONCURRENCY=10
# Set to 0 or unset to disable RPS limiting
GLOBAL_RPS=0

# HTTP timeouts (seconds)
HTTP_CONNECT_TIMEOUT_SEC=3
HTTP_READ_TIMEOUT_SEC=5

# SSL policy for checker
# Set to false to disable certificate verification (NOT recommended for prod)
HTTP_SSL_VERIFY=true
# If true, on SSL error retry once with ssl=False
HTTP_SSL_INSECURE_RETRY=true

\n# URL policy (optional, regex, comma-separated)\nURL_ALLOW_REGEX=\nURL_DENY_REGEX=\n\n# HTTP retries (optional)\nHTTP_RETRY_ATTEMPTS=2\nHTTP_RETRY_BASE_MS=200\nHTTP_RETRY_JITTER_MS=100\n\n# SSL custom CA (optional path to CA bundle)\nHTTP_CA_BUNDLE=\n
\n# Security (optional)\nAPI_KEY=\n\n# Webhook notifier (optional)\nWEBHOOK_URL=\n
\n# Logging\nLOG_LEVEL=INFO\nLOG_JSON=false\n\n# TTL cleanup (hours)\nTTL_CLEANUP_HOURS=720\n
\n# Per-service limits (JSON array of {pattern,concurrency,rps})\nSERVICE_LIMITS_JSON=[]\n
\n# Rate limiting (optional)\nRATE_LIMIT_ENABLE=false\nRATE_LIMIT_PER_MIN=120\nRATE_LIMIT_BURST=40\n
